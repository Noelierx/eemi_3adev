<h1>Coucou !</h1>

<p>
  <%= link_to 'Ajouter une note', new_note_path %>
</p>

<ul class="notes">
  <div>
    <h2>Notes sans user</h2>
    <% @notes_sans_id.each do |note| %>
      <li>
        <%= note.title %>
        <%= link_to 'Récupérer', claim_note_path(note) %>
        <%= link_to 'Supprimer', note_path(note), method: :delete %>
      </li>
    <% end %>
  </div>
  <div>
    <h2>Notes personnelles</h2>
    <% @notes.each do |note| %>
      <li>
        <%= note.title %>
        <%= link_to 'Editer', edit_note_path(note) %>
        <%= link_to 'Supprimer', note_path(note), method: :delete %>
      </li> 
    <% end %>
  </div>
</ul>